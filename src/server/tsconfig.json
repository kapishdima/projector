{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["ESNext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "module": "CommonJS",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@domains/*": ["domains/"],
      "@database/*": ["database/"],
      "@di/*": ["di/"],
      "@http/*": ["http/"]
    },
    "types": ["reflect-metadata", "jest", "node"],
    "outDir": "../../build/server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
